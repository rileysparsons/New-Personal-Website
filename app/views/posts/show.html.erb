<div id="post_show_content" class="wrapper wrapper_padding">
	<header>
		<p class="date"><%= @post.created_at.strftime("%A, %B, %d") %></p>
		<h1><%= @post.title%></h1>
		<hr>
	</header>
	<div class="content">
		<%= markdown @post.content %>
	</div>
	<hr>
	<div id="share_box">
		<p>Share Some Article Title</p>
		<!-- Twitter -->
		<a onclick="javascript:window.open('http://twitter.com/share?text=<%= @post.title %> by @rileysparsons - &amp;url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-twitter"></i></a>
	</div>
	<hr>
</div>

<%= link_to("Edit", edit_post_path(@post)) %>